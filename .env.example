# Supabase Configuration
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Email Service Configuration
# Choose between SMTP (Gmail) or Resend
# For Gmail SMTP (free):
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your_gmail@gmail.com
VITE_SMTP_PASS=your_app_password
VITE_FROM_EMAIL=your_gmail@gmail.com

# For Resend (paid service):
# RESEND_API_KEY=re_your_resend_api_key
# FROM_EMAIL=noreply@yourdomain.com

# Security Configuration
# Use a strong secret for encrypting 2FA secrets
VITE_ENCRYPTION_SECRET=your_32_character_encryption_secret

# Rate Limiting Configuration  
VITE_RATE_LIMIT_WINDOW_MS=900000
VITE_RATE_LIMIT_MAX_REQUESTS=5
